<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddStudy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addStudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:text="@string/add_study" />

        <TextView
            android:id="@+id/fio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/fio" />

        <EditText
            android:id="@+id/edFio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:hint="@string/v_text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/number_dog"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edNumber_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:hint="@string/v_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/period_prog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="@string/period_prog" />

            <EditText
                android:id="@+id/edperiod_prog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:hint="@string/v_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/group"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:hint="@string/v_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="@string/number_room" />

            <EditText
                android:id="@+id/edNumber_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="@string/v_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/telefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="@string/telefon" />

            <EditText
                android:id="@+id/edtelefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:hint="@string/v_text"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@drawable/lime"
            android:layout_margin="10dp"
            android:layout_height="5dp"
            />

        <TextView
            android:id="@+id/dop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorFon"
            android:textSize="15sp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="DopInfo"
            android:text="@string/dop_info" />

        <fragment
            android:name="com.example.mydormitory.fragments.BlankFragment"
            android:id="@+id/FrDopInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">

        </fragment>

        <Button
            android:id="@+id/btn_save_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:onClick="saveStudy"
            android:backgroundTint="@color/colorFon"
            android:text="@string/btn_save" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>